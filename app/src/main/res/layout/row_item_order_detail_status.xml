<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15">

    <com.reversecoder.timelineview.TimeLineView
        android:id="@+id/timeline_order_detail_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_3"
        android:minHeight="@dimen/dp_70"
        android:orientation="vertical"
        local:zoneType="ZONE_TYPE_ITEM">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_order_detail_status_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="02:30, Thursday, 22-07-2021"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/subtitleTextColor" />

            <TextView
                android:id="@+id/tv_order_detail_status_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order is accepted"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/paragraphTextColor"
                android:textStyle="bold" />

        </LinearLayout>

    </com.reversecoder.timelineview.TimeLineView>

    <LinearLayout
        android:id="@+id/ll_completed"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_circle_bg_blue"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_stepper_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>