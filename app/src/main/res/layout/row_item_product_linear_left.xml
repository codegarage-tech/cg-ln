<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_3"
    android:layout_marginRight="@dimen/dp_3"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="-20dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_weight=".32"
        android:background="@drawable/drop_shadow_rounded_rectangle"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_15"
            app:srcCompat="@drawable/vector_user" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".68"
        android:background="@drawable/drop_shadow_rounded_rectangle"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                            android:textColor="@color/paragraphTextColor"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:gravity="right"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_product_favorite"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            app:srcCompat="@drawable/vector_favourite_fill_primary"
                            app:tint="@color/colorShadeBlueDark" />

                    </LinearLayout>

                </LinearLayout>

                <include layout="@layout/layout_expandable_unit_product" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/hintsTextColor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_product_original_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10,0050 TK"
                            android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                            android:textColor="@color/hintsTextColor" />

                        <TextView
                            android:id="@+id/tv_product_offer_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50,0000 TK"
                            android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                            android:textColor="@color/hintsTextColor"
                            android:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_product_availability_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="Notice: Friday, (10 AM ~ 12 PM)"
                    android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                    android:textColor="@color/hintsTextColor"
                    android:visibility="visible" />

                <me.wangyuwei.shoppoing.ShoppingView
                    android:id="@+id/sv_add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_horizontal"
                    android:minWidth="@dimen/dp_50"
                    app:sv_bg_color="@color/colorShadeBlueDark"
                    app:sv_duration="600"
                    app:sv_number_color="@color/brown"
                    app:sv_text="Add to Cart" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>