<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/drop_shadow_rounded_rectangle"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_image"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/drop_shadow_rounded_rectangle"
        android:orientation="vertical"
        android:rotation="45">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_15"
            android:rotation="-45">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/vector_user" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@+id/ll_image"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@color/paragraphTextColor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="Subtitle"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary"
            android:textColor="@color/hintsTextColor" />

    </LinearLayout>

</RelativeLayout>



