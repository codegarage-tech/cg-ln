<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_110"
        android:background="@drawable/drop_shadow_rounded_rectangle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="@color/paragraphTextColor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_product_vendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="Vendor"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/hintsTextColor" />

            <TextView
                android:id="@+id/tv_product_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="Available time: Friday ~ Monday(10AM ~ 12AM)"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/hintsTextColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_product_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="10,0050 TK"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/hintsTextColor" />

                <TextView
                    android:id="@+id/tv_product_offer_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="50,0000 TK"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/hintsTextColor"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_product_cart"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_20"
                    app:srcCompat="@drawable/vector_favourite_fill_primary"
                    app:tint="@color/colorShadeBlueDark" />

                <ImageView
                    android:id="@+id/iv_product_favorite"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    app:srcCompat="@drawable/vector_bag_empty"
                    app:tint="@color/imageTintColor" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_18"
        android:background="@drawable/drop_shadow_rounded_rectangle"
        android:orientation="vertical"
        android:rotation="45">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_12"
            android:rotation="-45">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/vector_user" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>