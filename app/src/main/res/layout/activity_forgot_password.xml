<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBgColor"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_minus_40"
            android:padding="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_150"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/vector_forgot_password" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_minus_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="@string/txt_just_submit_the_email_address"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/paragraphTextColor" />

                <EditText
                    android:id="@+id/edt_email_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/drop_shadow_rectangle"
                    android:gravity="center_vertical"
                    android:hint="@string/txt_input_registered_email_address"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/paragraphTextColor"
                    android:textColorHint="@color/hintsTextColor" />

                <LinearLayout
                    android:id="@+id/ll_submit_email"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/drop_shadow_circle"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:background="@drawable/vector_right_arrow" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_line_vertical_fading_edge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/screenBgColor"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:text="@string/txt_or"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/paragraphTextColor" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="@string/txt_just_submit_the_mobile_number"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/paragraphTextColor" />

                <EditText
                    android:id="@+id/edt_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/drop_shadow_rectangle"
                    android:gravity="center_vertical"
                    android:hint="@string/txt_input_registered_mobile_number"
                    android:inputType="phone"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/paragraphTextColor"
                    android:textColorHint="@color/hintsTextColor" />

                <LinearLayout
                    android:id="@+id/ll_submit_mobile"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/drop_shadow_circle"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:background="@drawable/vector_right_arrow" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>